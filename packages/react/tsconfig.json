{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2021.WeakRef"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
